dnl Process this file with autoconf to produce a configure script.
AC_INIT(cgi/index.c)

AC_CANONICAL_HOST

AM_INIT_AUTOMAKE(monolith, 1.0)
AM_CONFIG_HEADER(include/config.h)
AC_PREFIX_DEFAULT(/usr/bbs)

dnl Checks for programs.
AC_PROG_CC
AC_PROG_RANLIB
AC_PROG_INSTALL
AC_PROG_MAKE_SET

dnl Checks for libraries.
dnl Replace `main' with a function in -lgdbm:
AC_CHECK_LIB(gdbm, gdbm_open)
AC_CHECK_LIB(crypt, crypt)
AC_CHECK_LIB(nsl, inet_ntoa)
AC_CHECK_LIB(socket, getpeername)

dnl Checks for header files.
AC_HEADER_DIRENT
AC_HEADER_STDC
AC_HEADER_SYS_WAIT
AC_CHECK_HEADERS(crypt.h fcntl.h sgtty.h sys/file.h sys/ioctl.h sys/time.h termio.h unistd.h termbits.h sys/mman.h mysql.h)

dnl Checks for typedefs, structures, and compiler characteristics.
AC_C_CONST
AC_TYPE_OFF_T
AC_TYPE_PID_T
AC_TYPE_SIZE_T
AC_STRUCT_TM

dnl Checks for library functions.
AC_PROG_GCC_TRADITIONAL
AC_TYPE_SIGNAL
AC_FUNC_VPRINTF
AC_FUNC_MMAP
AC_CHECK_FUNCS(gethostname mkdir regcomp socket strcspn strdup strftime strspn strstr)

echo
echo -n "Checking MySQL installation..."
if test $ac_cv_header_mysql_h = no ; then
  echo " whoops!"
  echo
  echo "ARGH: Unable to locate mysql!"
  echo
  echo "Please install the MySQL database system, which is available for free from"
  echo "http://www.mysql.org/ and run this program again. If you do have MySQL in-"
  echo "stalled, check directory and file permissions, or create symbolic links so"
  echo "configure can find it."
  echo
  exit 0
else
  echo " rock!"
  AC_CHECK_LIB(mysqlclient, mysql_connect)
fi
echo

AC_OUTPUT(cgi/Makefile lib/Makefile daemons/Makefile src/Makefile misc/Makefile shix/Makefile share/Makefile share/feelings/Makefile share/loginscreens/Makefile Makefile)
